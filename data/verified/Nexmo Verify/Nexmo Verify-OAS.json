            "post": {
                "parameters": [
                    {
                        "name": "brand",
                        "in": "query",
                        "required": true,
                        "description": "The name of the company or App you are using Verify for. This 18 character alphanumeric string is used in the body of Verify message. For example: \"Your brand PIN is ..\".",
